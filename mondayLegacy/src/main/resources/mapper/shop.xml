<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<!-- Namespace를 통해 JAVA 클래스와 Annotation클래스와 동기 -->
<mapper namespace="com.ezen.shop">

	<!-- 상품 목록 조회 -->
    <!-- 검색 쿼리 작성 시 파라미터로 SearchVO 반환객체로 BoardVO -->
	<select id="main" resultType="">
		select p_parentno ,p_price ,p_name ,p_img ,
		(select sum(d_qty) from detail d where d.p_no = p.p_no) sum
		from product p
	</select>
</mapper>
